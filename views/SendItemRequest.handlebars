<script>
    $('#checkoutbtn').click( function(e) {
  e.preventDefault()
  const email = $('#email').val().trim()
  const name = $('#name').val().trim()
  const adress = $('#address').val().trim()
  const Postnummber = $('#Postnummber').val().trim()
  const phonenummber = $('#phonenummber').val().trim()
  const price = $('#price').text()
  const data = {
    email: email,
    title: "order",
    adress: "Namn: " + name + "\nAdress: " + adress + " " + Postnummber + "\ntelefonnummer: " + phonenummber +"\nPris: " + price
  }
try {
  $.post('/SendItemRequest', data, function () {
    console.log('server recieved our data')
  })
} catch (error){
console.log('error')
}

})
</script>
