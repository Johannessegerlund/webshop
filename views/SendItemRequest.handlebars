<div class="container1">
<div id="check" class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Checkout</h1>
        <h4 id="price">Your Total: {{Price}} kr</h4>
        {{!-- <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div> --}}
        <form action="/SendItemRequest" method="POST" id="checkout-form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" id="email" class="form-control" required name="email">
                    </div>
                </div>
                    <div class="col-xs-12">
                    <div class="form-group">
                        <label for="name">fullst√§ndigt namn</label>
                        <input type="text" id="name" class="form-control" required name="name">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="address">Din Address</label>
                        <input type="text" id="address" class="form-control" required name="address">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="Postnummber">Post nummer</label>
                        <input type="text" id="Postnummber" class="form-control" required name="Postnummber">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="phonenummber">Tele nummer</label>
                        <input type="text" id="phonenummber" class="form-control" required name="phonenummber">
                    </div>
                </div>
                <hr>
            </div>
            <button type="submit" id="checkoutbtn" class="btn btn-success">Buy now</button>
        </form>
    </div>
</div>
</div>

