<script>
    $('#checkoutbtn').click( function(e) {
  e.preventDefault()

  const email = $('#name').val().trim()
  const adress = $('#address').val().trim()
  const data = {
    email: email,
    adress: adress
  }
try {
  $.post('/SendItemRequest', data, function () {
    console.log('server recieved our data')
  })
} catch (error){
console.log('error')
}

})
</script>
