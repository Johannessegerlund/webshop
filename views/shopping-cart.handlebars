
<div class="container"> 
{{#if products}}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <ul class="list-group">
        {{#each products}}
        <li class="list-group-item">
          <strong>{{item.title}}</strong>
          <span class="badge badge-success">{{price}} kr</span>
        
          <a href="/deleteOne/{{item._id}}">-</a>
          <span class="badge badge-pill badge-dark">{{qty}}</span>
          <a href="/addOne/{{item._id}}">+</a>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <strong>total: {{totalPrice}} kr</strong>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <a href="/SendItemRequest" type="button" class="btn btn-success">Checkout</a>
    </div>
  </div>
{{else}}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
     <h2>No items in cart</h2>
    </div>
  </div>
{{/if}}
</div> 

